<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:importantForAccessibility="no"
        android:src="@drawable/circle_shape_green" />

    <TextView
        android:id="@+id/borrowingDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/ellipse"
        android:textSize="16sp"
        tools:text="01/07/2023" />

    <TextView
        android:id="@+id/borrowerTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/borrowingDateTextView"
        android:textSize="16sp"
        tools:text="Joe Doe" />

    <TextView
        android:id="@+id/borrowingValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="R$ 1580,98" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ellipse"
        android:layout_marginTop="20dp"
        android:background="?android:attr/dividerVertical" />

</RelativeLayout>
